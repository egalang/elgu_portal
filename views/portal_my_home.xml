<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_home_elgu_requests"
              name="Portal Home: eLGU Requests"
              inherit_id="portal.portal_my_home"
              priority="35">

        <!-- Ensure client category is enabled (account does this too) -->
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
        </xpath>

        <!-- Insert tile into the same "client category" area as Your Invoices -->
        <xpath expr="//div[@id='portal_client_category']" position="inside">
            <t t-call="portal.portal_docs_entry">
                <!-- You can replace icon with your own SVG path later -->
                <t t-set="icon" t-value="'/account/static/src/img/bank.svg'"/>
                <t t-set="title">Your Requests</t>
                <t t-set="url" t-value="'/my/elgu/requests'"/>
                <t t-set="text">Track your eLGU applications</t>
                <t t-set="placeholder_count" t-value="'elgu_request_count'"/>
            </t>
        </xpath>

    </template>

</odoo>
