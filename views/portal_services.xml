<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="portal_services_home" name="eLGU Services Home">
    <t t-call="website.layout">
      <div class="container my-5">
        <div class="text-center mb-4">
          <h1 class="mb-2">Online Citizen Services</h1>
          <p class="text-muted mb-0">Choose a service to apply online.</p>
        </div>

        <div class="row g-4">
          <t t-foreach="services" t-as="cat">
            <div class="col-12 col-lg-4">
              <div class="card h-100 shadow-sm">
                <div class="card-body">
                  <h4 class="card-title mb-3">
                    <t t-esc="cat['title']"/>
                  </h4>

                  <div class="list-group list-group-flush">
                    <t t-foreach="cat['items']" t-as="item">
                      <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                         t-att-href="item['href']">
                        <span><t t-esc="item['label']"/></span>
                        <span class="text-muted">Apply</span>
                      </a>
                    </t>
                  </div>

                </div>
              </div>
            </div>
          </t>
        </div>

      </div>
    </t>
  </template>

</odoo>
